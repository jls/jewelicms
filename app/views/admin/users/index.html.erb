<div id="settings-primary" class="span-18 append-1">
  <h2>Settings</h2>
  <h3>Users</h3>
  <table>
    <thead>
  	  <tr> 
  		  <th>Login</th>
  	    <th>Real Name</th>
  	    <th>Email</th>
  	    <th>Actions</th>
  	  </tr>
  	</thead>
  	<tbody>
      <% @users.each do |user| -%>
  	    <tr>
  	      <td><%= user.login %></td>
  	      <td><%= user.name %></td>
  	      <td><%= user.email %></td>
  		    <td>
  		      <%= link_to 'Edit', edit_admin_user_path(user) %> | 
  		      <%= link_to 'Delete', admin_user_path(user), :method => :delete, :confirm => "Are you sure?" %>
  		    </td>
  	    </tr>
  	  <% end -%>
  	</tbody>
	</table>

<%= link_to 'New User', new_admin_user_path, :class=>"action-style" %>
</div>

<div id="settings-menu" class="span-5 last">
	<div id="settings-menu-inner">
	<ul>
		<li id="users-tab"><%= link_to 'Users', admin_users_path %></li>
	</ul>
	</div>
</div>