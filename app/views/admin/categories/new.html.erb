<h2>New Category</h2>
<%= error_messages_for :category %>

<% form_for @category, :url => (@category.new_record?) ? admin_categories_path : admin_category_path(@category) do |f| %>
  <%= f.collection_select :channel_id, Channel.find(:all), "id", "name" %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>