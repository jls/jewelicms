<%= form_for Comment.new do |f| -%>
  <%= f.hidden_field :article_id, :value => article.id %>
  <%= f.hidden_field :return_path, :value => request.path + "#comments" %>
  <p>
    <label for="comment_name">Name</label><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <label for="comment_author_url">URL</label><br/>
    <%= f.text_field :author_url %>
  </p>
  <p>
    <label for="comment_email">Email (private)</label><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <label for="comment_body">Comment</label><br/>
    <%= f.text_area :body, :size => "60x10" %>
  </p>
  <p>
    <%= f.submit "Post" %>
  </p>
<% end -%>