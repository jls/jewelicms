<div id="comments">
  <% if flash[:comment_notice] -%>
    <div class="flash"><%= flash[:comment_notice] %></div>
  <% end -%>
  <ul>
    <% list.published.each do |comment| -%>
      <li>
        <span class="author"><%= comment.name %></span>
        <span class="timestamp note"><%= time_ago_in_words(comment.updated_at) %></span>
        <p><%= h comment.body %></p>
      </li>
    <% end -%>
  </ul>
  <%= render(:partial => "comments/form") %>
</div>